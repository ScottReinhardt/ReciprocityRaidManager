@model WoW.Core.Models.ItemModel

@if (Model.ItemStats != null)
{
    <div class="large-4 medium-4 columns">
        <div class="panel">
            <h3>@Model.Name</h3>
            @foreach (var stat in Model.ItemStats)
            {
                @Html.DisplayFor(m => stat)
            }
            @*@if (Model.Enchant.Bonus != null)
            {
                <p class="no-margin">Enchant: @Html.DisplayFor(m => m.Enchant.Bonus)</p>
            }*@
        </div>
    </div>
}