@model WoW.Core.Models.PlayerModel

<h3>@Html.DisplayFor(m => m.Name), @Html.DisplayFor(m => m.Specialization) @Html.DisplayFor(m => m.Class)</h3>
<div class="row">
    <div class="large-3 medium-3 columns">
        <h4>@Html.LabelFor(m => m.Equipment.AverageItemLevel) @Html.DisplayFor(m => m.Equipment.AverageItemLevel)</h4>
    </div>
    <div class="large-3 medium-3 columns">
        <h4>@Html.LabelFor(m => m.Equipment.AverageEquippedItemLevel) @Html.DisplayFor(m => m.Equipment.AverageEquippedItemLevel)</h4>
    </div>
    <div class="large-3 medium-3 columns">
        <h4>@Html.LabelFor(m => m.SimcraftDps) @Html.DisplayFor(m => m.SimcraftDps)</h4>
    </div>
    <div class="large-3 medium-3 columns">
        <h4><a href="@Html.DisplayFor(m => m.LogsProfileLink)">@Html.LabelFor(m => m.LogsProfileLink)</a></h4>
    </div>
</div>